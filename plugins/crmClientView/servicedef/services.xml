        <auto-attributes include="nonpk" mode="IN" entity-name="SalesOpportunity" optional="true"/>
    </service>
    <service name="deleteSaleOpportunity" default-entity-name="SalesOpportunity" engine="java" invoke="deleteSaleOpportunity" auth="false">
