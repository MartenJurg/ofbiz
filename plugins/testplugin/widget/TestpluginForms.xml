<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">

    <form name="testForm" type="single" target="createTestEvent">
        <!-- We have this utility in OFBiz to render form based on service definition.
             Service attributes will automatically lookedup and will be shown on form
        -->
        <auto-fields-service service-name="testPluginService"/>
        <field name="typeId" title="${uiLabelMap.CommonType}">
            <drop-down allow-empty="false" current-description="">
                <!---We have made this drop down options dynamic(Values from db) using this -->
                <entity-options description="${description}" key-field-name="typeId" entity-name="testType">
                    <entity-order-by field-name="description"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonAdd}">
            <submit button-type="button"/>
        </field>
    </form>

    <form name="FindTestEntities" type="single" target="FindTestEntities" default-entity-name="testEntity">
        <field name="noConditionFind">
            <hidden value="Y"/> <!-- if this isn't there then with all fields empty no query will be done -->
        </field>
        <field name="id" title="${uiLabelMap.testEntityId}">
            <text-find/>
        </field>
        <field name="firstName" title="${uiLabelMap.testEntityFirstName}">
            <text-find/>
        </field>
        <field name="lastName" title="${uiLabelMap.testEntityLastName}">
            <text-find/>
        </field>
        <field name="typeId" title="${uiLabelMap.testEntityType}">
            <drop-down allow-empty="true" current-description="">
                <entity-options description="${description}" key-field-name="typeId" entity-name="testType">
                    <entity-order-by field-name="description"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="searchButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit">
            <submit button-type="button" image-location="/images/icons/magnifier.png"/>
        </field>
    </form>

    <form name="ListTestEntities" type="list" list-name="listIt" paginate-target="FindTestEntities"
          default-entity-name="testEntity" separate-columns="true"
          odd-row-style="alternate-row" header-row-style="header-row-2" default-table-style="basic-table hover-bar">
        <actions>
            <!-- Preparing search results for user query by using OFBiz stock service to perform find operations on a single entity or view entity -->
            <service service-name="performFind" result-map="result" result-map-list="listIt">
                <field-map field-name="inputFields" from-field="testEntityCtx"/>
                <field-map field-name="entityName" value="testEntity"/>
                <field-map field-name="orderBy" from-field="parameters.sortField"/>
                <field-map field-name="viewIndex" from-field="viewIndex"/>
                <field-map field-name="viewSize" from-field="viewSize"/>
            </service>
        </actions>

        <field name="id" title="${uiLabelMap.testEntityId}">
            <display/>
        </field>
        <field name="typeId" title="${uiLabelMap.testEntityType}">
            <display-entity entity-name="testType"/>
        </field>
        <field name="firstName" title="${uiLabelMap.testEntityFirstName}" sort-field="true">
            <display/>
        </field>
        <field name="lastName" title="${uiLabelMap.testEntityLastName}" sort-field="true">
            <display/>
        </field>
        <field name="comments" title="${uiLabelMap.testEntityComment}">
            <display/>
        </field>
    </form>
</forms>